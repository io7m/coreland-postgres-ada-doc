(section
  (ref "pgada_database_host")
  (title "PGAda.Database.Host")
  (para function_desc "Return hostname of a connection.")
  (subsection
    (title "Synopsis")
    (para-verbatim function_synopsis
"with PGAda.Database;

function Host (Connection : in PGAda.Database.Connection_T) return String;
"))
  (subsection
    (title "Description")
    (para
      "The " (item ada_function "Host") " function returns the name of the
      host associated with " (item parameter "Connection") ".")))
