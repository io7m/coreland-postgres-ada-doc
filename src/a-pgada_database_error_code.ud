(section
  (ref "pgada_database_error_code")
  (title "PGAda.Database.Error_Code")
  (para function_desc "Return result error code.")
  (subsection
    (title "Synopsis")
    (para-verbatim function_synopsis
"with PGAda.Database;
with PGAda.Errors;

function Error_Code (Result : in PGAda.Database.Result_T)
  return PGAda.Errors.Error_Value_T;
"))
  (subsection
    (title "Description")
    (para
      "The " (item ada_function "Error_Code") " function returns the error
       code field from the given " (item parameter "Result") ".")))
