(section
  (ref "pgada_database_get_value")
  (title "PGAda.Database.Get_Value")
  (para function_desc "Return a single field value of one row of a result.")
  (subsection
    (title "synopsis")
    (para-verbatim function_synopsis
"with PGAda.Database;

function Get_Value
 (Result      : in PGAda.Database.Result_T;
  Tuple_Index : in Positive;
  Field_Index : in Positive) return Natural;
"))
  (subsection
    (title "description")
    (para
      "The " (item function "Get_Value") " function returns the value
      of the field at row " (item function_param "Tuple_Index")
      " at column " (item function_param "Field_Index") " in the result "
      (item function_param "Result") ".")))
