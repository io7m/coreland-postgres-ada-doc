(section
  (ref "pgada_database_finish")
  (title "PGAda.Database.Finish")
  (para function_desc "Closes the connection to the server.")
  (subsection
    (title "synopsis")
    (para-verbatim function_synopsis
"with PGAda.Database;

procedure Finish (Connection : in out PGAda.Database.Connection_T);
"))
